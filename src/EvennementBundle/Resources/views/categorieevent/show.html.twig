{% extends 'baseadmin.html.twig' %}
{% block body %}
    <style>
        table.paleBlueRows {
            font-family: "Garamond", Times, serif;
            border: 1px solid #FFFFFF;
            width: 1000px;
            height: 200px;
            text-align: center;
            color:#ffffff;
            font-size: 20px;
            border-collapse: collapse;
        }

        table.paleBlueRows td, table.paleBlueRows th {
            border: 0px solid #FFFFFF;
            padding: 5px 13px;
        }

        table.paleBlueRows tbody td {
            font-size: 20px;
        }

        table.paleBlueRows tr:nth-child(even) {
            background: #D0E4F5;
        }

        table.paleBlueRows thead {
            background: #0B6FA4;
            border-bottom: 5px solid #FFFFFF;
        }

        table.paleBlueRows thead th {
            font-size: 18px;
            font-weight: bold;
            color: #FFFFFF;
            text-align: center;
            border-left: 2px solid #FFFFFF;
        }

        table.paleBlueRows thead th:first-child {
            border-left: none;

        }

        table.paleBlueRows tfoot {
            font-size: 14px;
            font-weight: bold;
            color: #333333;
            background: #D0E4F5;
            border-top: 3px solid #444444;
        }

        table.paleBlueRows tfoot td {
            font-size: 14px;

        }

        #desc {
            padding: 10px 65px;

        }

    </style>
    <link rel="stylesheet" href="{{ asset('bundles/evennement/css/css_event.css') }}">

    <h1 style="padding-left:500px ; color: #0a7369">La Liste des Catégories</h1><br>
    <link rel="stylesheet" href="{{ asset('css/chaimaDesign.css') }}"/>
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">


    <div class="row col-md-6">
        <table class="paleBlueRows">
            <thead>
            <tr>
                <th>Id Catégorie</th>
                <th>Libelle</th>

            </tr>
            <thead>

            <tr>
                <td>{{ categorieEvent.id}}</td>
                <td>{{ categorieEvent.libelle }}</td>

            </tr>

        </table>
        <div class="col-md-12">
            <ul class="list_btn_action pull-right">
                <li>
                    <a href="{{ path('categorieevent_index') }}" class="btn btn-info"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Liste</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <button type="submit" value="Supprimer" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>                     Supprimer</button>
                    {{ form_end(delete_form) }}
                </li>
                <li>
                    <a href="{{ path('categorieevent_edit', { 'id': categorieEvent.id }) }}" class="btn btn-warning ">Modifier</a>
                </li>
            </ul>

        </div>

    </div>
    </div>
{% endblock %}
