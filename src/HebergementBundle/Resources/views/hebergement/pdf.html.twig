<h3>Hébergement_titre :<h4> {{ hebergement.titre }}</h4></h3>
<table border="1" width="100%">
    <tr>
        <th>Client</th>
        <th>Hebergement</th>
        <th>Date Debut</th>
        <th>Date Fin</th>
        <th>Nombre de personnes</th>
        <th>Prix/Nuit</th>
        <th>Durée</th>
        <th>Total</th>

    </tr>
    <tr>
        <td>{{ mes.idClient }}</td>
        <td>{{ hebergement.titre }}</td>
        <td>{{ mes.datedebut|date('d-m-Y') }}</td>
        <td>{{ mes.datefin|date('d-m-Y') }}</td>
        <td>{{ mes.nbrperson }} personnes</td>
        <td>{{ hebergement.prix }} <strong>TND</strong></td>
        <td>{{ mes.datefin|date("d")- mes.datedebut|date("d") }} jours</td>
        <td>{{ hebergement.prix * mes.nbrPerson * (mes.datefin|date("d")- mes.datedebut|date("d")) }}<strong>TND</strong></td>

    </tr>
</table>
