                            <a class="fa fa-list active" href=""></a>
                        </div>
                    </div>
                </div>
                {% for plan in plans %}

                    <div class="product-thumb product-thumb-horizontal">
                        <header class="product-header">
                            <img src="{{ asset('uploads/ImagesPlans/' ~ plan.image) }}" >
                        </header>
                        <div class="product-inner">

                            <h5 class="product-title">{{ plan.libelle }}</h5>
                            <div class="product-desciption">{{ plan.description }}</div>
                            <div class="product-meta">
                                <ul class="product-actions-list">
                                    <li><a class="btn btn-sm" href="#"><i class="fa fa-shopping-cart"></i> To Maps</a>
                                    </li>
                                    <li><a class="btn btn-sm"><i class="fa fa-bars"></i> Details</a>
